{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[sql]": {
    "editor.defaultFormatter": "adpyke.vscode-sql-formatter"
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[elixir]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "[phoenix-heex]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "JakeBecker.elixir-ls"
  },
  "tailwindCSS.includeLanguages": {
    "phoenix-heex": "html",
    "elixir": "html"
  },
  "editor.acceptSuggestionOnEnter": "off",
  "editor.fontFamily": "FiraCode-Retina",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "600",
  "editor.guides.bracketPairs": "active",
  "editor.hover.above": false,
  "editor.largeFileOptimizations": false,
  "editor.renderWhitespace": "none",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  // "editor.wordBasedSuggestions": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.config": "text",
    "*.exs": "elixir",
    "*.livemd": "markdown",
    "*.cheatmd": "markdown",
    "\\.?env(\\..*?)?$": "shell",
    "*.heex": "phoenix-heex"
  },
  "files.exclude": {
    "**/.elixir_ls": true,
    "**/node_modules": true,
    ".DS_Store": true
  },
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.currentLine.pullRequests.enabled": false,
  "gitlens.statusBar.pullRequests.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "markdown-preview-enhanced.codeBlockTheme": "twilight.css",
  "markdown-preview-enhanced.enableTypographer": true,
  "markdown-preview-enhanced.frontMatterRenderingOption": "code block",
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "markdown-preview-enhanced.revealjsTheme": "night.css",
  "markdown-preview-enhanced.usePandocParser": true,
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "redhat.telemetry.enabled": false,
  "search.exclude": {
    "**/_build": true,
    "**/deps": true,
    "**/node_modules": false,
    "node_modules": true
  },
  "search.useGlobalIgnoreFiles": true,
  "security.workspace.trust.enabled": false,
  "svg.preview.mode": "svg",
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "editorBracketHighlight.foreground1": "#F8F8F8",
    "editorBracketHighlight.foreground2": "#F8F8F8",
    "editorBracketHighlight.foreground3": "#F8F8F8",
    "editorBracketHighlight.foreground4": "#F8F8F8",
    "editorBracketHighlight.foreground5": "#F8F8F8",
    "editorBracketHighlight.foreground6": "#F8F8F8",
    "editorBracketHighlight.unexpectedBracket.foreground": "#F18260",
    "[Community Material Theme Darker High Contrast]": {}
  },
  "workbench.colorTheme": "Predawn Twilight",
  "workbench.editor.enablePreview": false,
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.iconTheme": "vs-minimal",
  "workbench.preferredDarkColorTheme": "Predawn Twilight",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
